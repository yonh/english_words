<h1>Listing words</h1>
 
<%= link_to 'New Word', new_word_path%>

<table>
  <tr>
    <th>Word</th>
    <th>中文解释</th>
    <th>访问</th>
    <th>正确</th>
    <th>错误</th>
  </tr>
 
  <% @words.each do |word| %>
    <tr>
      <td><%= word.word%></td>
      <td><%= word.meanings_s%></td>
      <td><%= word.access_count%></td>
      <td><%= word.correct_count%></td>
      <td><%= word.error_count%></td>
      
	  <td><%= link_to 'Show', word_path(word) %></td>
	  <td><%= link_to 'Edit', edit_word_path(word) %></td>
	  <td><%= link_to 'Delete', word_path(word), 
	  				method: :delete, data: { confirm: 'Are you Sure?' } %></td>

    </tr>
  <% end %>
</table>
